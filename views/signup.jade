extends layout

block title
  title= title

block content
  div.col-sm-6.col-sm-offset-3
    h1
      span.fa.fa-sign-in  Signup
      if message.length > 0
        div.alert.alert-danger= message
    form(action='/signup', method='post')
      div.form-group
        label UserName: 
        input.form-control(type='text', name='username')
      div.form-group
        label Password: 
        input.form-control(type='password', name='password')
      button.btn.btn-lg.btn-dafault.btn-warning(type='submit') Login
    hr
    p Already have an account?
      a(href='/login') Login
    p Or go 
      a(href='/home') home.
